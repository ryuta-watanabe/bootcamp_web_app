<div data-test="posts-container">
  <% timeline.forEach(timelineItem => { %>
    <div class="posts-index-item" data-test="post-<%= timelineItem.id %>">
      <div class="post-left">
        <img src="<%= timelineItem.user.imageName %>">
      </div>
      <div class="post-right">
        <% if (timelineItem.type === 'retweet') { %>
          <span data-test="post-label"><%= timelineItem.user.name %> Retweeted</span>
        <% } %>
        <div class="post-user-name">
          <a href="/users/<%= timelineItem.user.id %>" data-test="post-item-user">
            <%= timelineItem.user.name %>
          </a>
        </div>
        <a href="/posts/<%= timelineItem.id %>" data-test="post-item-content">
          <%= timelineItem.post.content %>
        </a>
      </div>
    </div>
    <% }) %>
</div>
